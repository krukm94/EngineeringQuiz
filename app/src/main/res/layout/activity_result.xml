<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.ddns.opetany.engineeringquiz.ResultActivity"
    android:background="@drawable/tab3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endOfGame"
        android:id="@+id/endOfGameTextView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@drawable/questionshape"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourResult"
        android:id="@+id/yourResult"
        android:layout_below="@+id/endOfGameTextView"
        android:gravity="center"
        android:background="@drawable/questionshape"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/lvlTextView"
        android:background="@drawable/lvlshape"
        android:gravity="center"
        android:layout_below="@+id/yourResult"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />


</RelativeLayout>
