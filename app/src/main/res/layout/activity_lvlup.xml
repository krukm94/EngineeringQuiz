<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.ddns.opetany.engineeringquiz.lvlUP"
    android:background="@drawable/tab3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bravo"
        android:id="@+id/bravoTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:background="@drawable/questionshape"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextlvl"
        android:id="@+id/nextLvlTextView"
        android:gravity="center"
        android:background="@drawable/questionshape"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/bravoTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/lvlUpTextView"
        android:background="@drawable/lvlshape"
        android:layout_below="@+id/nextLvlTextView"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
