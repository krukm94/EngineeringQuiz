<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.ddns.opetany.engineeringquiz.RegistrationActivity"
    android:orientation="vertical"
    android:background="@drawable/tab3_t">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/only_eq"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterLogin_text"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:id="@+id/enterLogin_TextView"
        android:focusableInTouchMode="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registration_login_EditText"
        android:hint="@string/loginHint"
        android:gravity="center_horizontal"
        android:background="@drawable/textshape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterPassword_text"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:id="@+id/enterPassword_TextView"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/registration_password_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/passwordHint"
        android:gravity="center_horizontal"
        android:background="@drawable/textshape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/reenterPassword_text"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:id="@+id/reenterPassword_TextView"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rePassword_EditText"
        android:layout_gravity="center_horizontal"
        android:hint="@string/passwordHint"
        android:gravity="center_horizontal"
        android:background="@drawable/textshape" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUpButton_text"
        android:id="@+id/signUp_Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:onClick="registrationDoneButton"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_reg"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"/>
</LinearLayout>
